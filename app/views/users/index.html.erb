<% if @users.any? %>
    <ul>
        <%= form_tag update_without_password_path, method: :put do %>
          <% @users.each do |user| %>
              <li class="one_line_item">
                <%= label_tag 'email', 'email: ' %>
                <%= label_tag "email[#{user.id}]", user.email  %>
                <%= label_tag 'name', 'name: ' %>
                <%= link_to user.name, show_user_path(user) %>
                <%= check_box_tag "approved[#{user.id}]" %>
              </li>
          <% end %>
        <%= submit_tag 'Save' %>
      <% end %>
    </ul>
<% else %>
    <p>All users are approved.</p>
<% end %>